<!DOCTYPE html>
<html>
	<head>
	           <title><%= full_title(yield(:title)) %></title>

				<%= stylesheet_link_tag 'application', media: 'all',
				'data-turbolinks-track' => true %>
				<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
				<%= csrf_meta_tags %>
				<!--[if lt IE 9]>
				<script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
				</script>
				<![endif]-->

	</head>
	<body>

                        <% flash.each do |message_type,message| %>
                        	<div class="alert alert-<%= message_type %>"><%= message %></div>
			<% end %>
             
                        <% if !logged_in? %>

       
			<nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
  
  					<div class="col-md-3">
  					</div>

					<div class="col-md-6">
					 <ul class="nav navbar-nav", id="quad">
						<li><%= link_to "Home", root_path %></li>
						<li><%= link_to "Help", help_path %></li>
						<li><%= link_to "How to", howto_path %></li>
						<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Log In <span 							class="caret"></span></a>
							<ul class="dropdown-menu">
							  <li><%= link_to "Log in as User", login_path %></li>
							  <li><%= link_to "Log in as Manager",'#' %></a></li>
							</ul>
					      </li>
					 </ul>
					</div>

					<div class="col-md-3">
					</div>

			</nav>

<% else %>

	<nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
  
  					<div class="col-md-3">
  					</div>

					<div class="col-md-6">
					 <ul class="nav navbar-nav", id="quad">
						<li><%= link_to "Home", root_path %></li>
						<li><%= link_to "Help", help_path %></li>
						<li><%= link_to "How to", howto_path %></li>
						<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Settings <span 							class="caret"></span></a>
							<ul class="dropdown-menu">
							  <li><%= link_to "Change Personal Data", login_path %></li>
							  <li><%= link_to "Log Out",logout_path , method: "delete" %></a></li>
							</ul>
					      </li>
					 </ul>
					</div>

					<div class="col-md-3">
					</div>

			</nav>

<% end %>

			<div class="container">
			<h1>SMART KART <%= link_to image_tag("logo.jpg" , :width => 100 , :height => 100) %></h1> 
			<hr/>
			<%= yield %>
			
			</div>
			
    			<footer class="footer">
  				<nav>
<hr/>
					 <ul >
						<li><%= link_to "Admin Log In", '#' %></li> &nbsp &nbsp &nbsp &nbsp
						<li><%= link_to "Contacts", '#' %></li>
					 </ul>
				</nav>
		

	</body>
</html>
